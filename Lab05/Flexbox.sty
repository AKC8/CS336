
side-Box-Flex = 1 6 20%
box-Padding = 20px
box-Border = 1px solid black
border-Color = 1px solid #8888bb
side-Box-Color = #ccccff

body {
    font: 24px Helvetica
    background: #999999
    #main {
      min-height: 800px
      margin: 0px
      padding: 0px
      display: flex
      flex-flow: row
      article {
        margin: 4px
        padding: box-Padding
        border: box-Border
        border-radius: 7pt
        background: #dddd88
        flex: 3 1 60%
        order: 2
      }
      nav {
        margin: 4px
        padding: box-Padding
        border: border-Color
        border-radius: 7pt
        background: side-Box-Color
        flex: side-Box-Flex
        order: 1
      }
        aside {
          margin: 4px
          padding: box-Padding
          border: border-Color
          border-radius: 7pt
          background: side-Box-Color
          flex: side-Box-Flex
          order: 3
      }
    }
}

footer {

}

header{
    display: block
    margin: 4px
    padding: box-Padding
    min-height: 100px
    border: bod-Border
    border-radius: 7pt
    background: #ffeebb
}

/* Too narrow to support three columns */
@media all and (max-width: 640px) {
    body {
      #main {
        flex-direction: column;
        nav aside header footer {
          min-height: 50px
          max-height: 50px
        }
        nav {
          text-align: left
        }
    }
  }
}
